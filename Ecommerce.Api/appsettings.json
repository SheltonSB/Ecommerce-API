{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Host=YOUR_HOST;Database=YOUR_DB;Username=YOUR_USER;Password=YOUR_PASSWORD;Ssl Mode=Require;Trust Server Certificate=true"
    },
    "Jwt": {
        "Key": "Your_JWT_Key_Here",
        "Issuer": "ecommerce-api",
        "Audience": "ecommerce-client"
    },
    "Stripe": {
        "PublishableKey": "Stripe_PublishableKey_Here",
        "SecretKey": "Stripe_SecretKey_Here"
    },
    "FrontendURL": "https://your-production-domain.com",
    "StripeSuccessUrl": "https://your-production-domain.com/success",
    "StripeCancelUrl": "https://your-production-domain.com/cart",
    "AdminUser": {
        "Password": "ChangeMe_AdminPassword"
    }
}
